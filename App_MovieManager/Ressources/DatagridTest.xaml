    <Style x:Key="DataGridTheme" TargetType="{x:Type DataGrid}">
        <!--<Setter Property="FontFamily" Value="Helvetica" />-->
        <Setter Property="Background" Value="#1F295B" />
        <Setter Property="AlternatingRowBackground" Value="#1F295B" />
        <Setter Property="Foreground" Value="Black" />
        <!--<Setter Property="BorderBrush" Value="Chartreuse" />-->
        <Setter Property="BorderThickness" Value="0 0 0 1" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="Bisque" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="SelectionMode" Value="Single" />
        <!--<Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="True" />-->
    </Style>


