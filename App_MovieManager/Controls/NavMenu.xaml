<UserControl x:Class="App_MovieManager.Controls.NavMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:App_MovieManager.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="160">
    <Grid>

        <StackPanel Name="panelNavMenu" Grid.Column="0" Background="WhiteSmoke">

            <StackPanel Orientation="Vertical" Margin="5 0 0 0">
                <Label Content="userNickname"  FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center" HorizontalAlignment="Left"/>
                <Label Content="user@email.com"  FontSize="11" FontWeight="Regular" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0 -10 0 0"/>
            </StackPanel>

            <StackPanel Name="optionsMenu" Margin="10 50 0 15">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <iconPacks:PackIconMaterial Grid.Row="0" Kind="FilmstripBoxMultiple" VerticalAlignment="Center" />
                    <iconPacks:PackIconMaterial Grid.Row="1" Kind="MovieOpenStar" VerticalAlignment="Center" />
                    <iconPacks:PackIconMaterial Grid.Row="2" Kind="Delete" VerticalAlignment="Center" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}">Ma Collection</Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}">Mes Favoris</Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}">Corbeille</Hyperlink>
                    </TextBlock>
                </Grid>


                <Border Width="200"
                    Height="1"
                    Background="LightGray"
                    Opacity="0.8"
                    Margin="-10 20 0 20 "/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <iconPacks:PackIconMaterial Grid.Row="0" Kind="MovieSearch" VerticalAlignment="Center" />
                    <iconPacks:PackIconMaterial Grid.Row="1" Kind="AccountBox" VerticalAlignment="Center" />
                    <iconPacks:PackIconMaterial Grid.Row="2" Kind="MoviePlus" VerticalAlignment="Center" />
                    <iconPacks:PackIconMaterial Grid.Row="3" Kind="MovieOpenEdit" VerticalAlignment="Center" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItemDark}" Click="Hyperlink_Click_ViewMovies" >Voir Films</Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}" Click="Hyperlink_Click_ViewActors" >Voir Acteurs</Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}" Click="Hyperlink_Click_CreateMovie" >Créer Film</Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}" Click="Hyperlink_Click_ModifyMovie" >Modifier Film</Hyperlink>
                    </TextBlock>

                </Grid>

            </StackPanel>
            <!-- Fin stackpanel 'optionsMenu' -->

            <StackPanel Name="bottomOptions" Orientation="Vertical" Margin="10 50 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <iconPacks:PackIconMaterial Kind="AccountLockOutline" VerticalAlignment="Center" Foreground="Black"/>
                    <iconPacks:PackIconMaterial Grid.Row="1" Kind="Cog" VerticalAlignment="Center" Foreground="Black"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}">Se déconnecter</Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource navItemBlocks}">
                    <Hyperlink Style="{StaticResource navItem}">Paramètres</Hyperlink>
                    </TextBlock>
                </Grid>
            </StackPanel>

        </StackPanel>
        <!-- Fin stackpanel 'panelNavMenu' -->

    </Grid>
</UserControl>
